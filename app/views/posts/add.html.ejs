<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="well">
      <form id="post-form" class="form" role="form" action="/posts" method="POST">
        <fieldset>
          <legend>Create a new Post</legend>
          <% if(params.errors) { %>
          <div class="control-group">
            <ul>
            <% for(var err in params.errors) { %>
              <li><%= params.errors[err]; %></li>
            <% } %>
            </ul>
          </div>
          <% } %>

          <%- partial('form', {post: params}) %>

          <div class="form-actions pull-right">
            <%- contentTag('input', 'Post', {type: 'submit', class: 'btn btn-primary'}) %>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
</div>
