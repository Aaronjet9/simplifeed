<div class="hero-unit">
  <form id="post-form" class="form-horizontal" action="/posts/<%= params.id %>?_method=PUT" method="POST">
    <fieldset>
      <legend>Update this Post</legend>
      <% if(params.errors) { %>
      <div class="control-group">
        <ul>
        <% for(var err in params.errors) { %>
          <li><%= params.errors[err]; %></li>
        <% } %>
        </ul>
      </div>
      <% } %>

      <%- partial('form', {post: post}) %>

      <div class="form-actions">
        <%- contentTag('input', 'Save', {type: 'submit', class: 'btn btn-primary'}) %>
        <button class="btn btn-danger" formaction="/posts/<%= post.id %>?_method=DELETE" formmethod="POST" type="submit"><i class="glyphicon glyphicon-trash"></i></button>
    </div>
    </fieldset>
  </form>
</div>
