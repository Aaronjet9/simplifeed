<div class="form-group">
  <%- contentTag('textarea', post.content, {class:'form-control', name:'content'}) %>
</div>

<div id="progress" class="csspinner traditional" style="display:none;">

</div>

<div id="post-uploads">
  <% if (post.files) { %>
    <% for (var i=0; i < post.files.length; i++) { %>
      <%= partial('/posts/upload', {file: post.files[i]}); %>
    <% } %>
  <% } %>
</div>

<span class="btn btn-success fileinput-button">
    <i class="glyphicon glyphicon-plus"></i>
    <span>Add photos...</span>
    <input id="post-fileupload" type="file" name="files[]" data-url="/files/upload" multiple>
</span>
