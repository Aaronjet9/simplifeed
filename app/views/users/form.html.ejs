<div class="row">
  <div class="col-sm-6">
    <div class="well">
      <div class="form-group <%= fieldClass(errors, 'username') %>">
        <label for="username" class="control-label">* Username</label>
        <%- contentTag('input', user.username, {type:'text', class:'form-control', name:'username'}) %>
        <%- fieldMessage(errors, 'username'); %>
      </div>

      <div class="form-group <%= fieldClass(errors, 'email') %>">
        <label for="email" class="control-label">* Email</label>
        <%- contentTag('input', user.email, {type:'text', class:'form-control', name:'email'}) %>
        <%- fieldMessage(errors, 'email'); %>
      </div>

      <div class="form-group <%= fieldClass(errors, 'password') %>">
        <label for="password" class="control-label">* Password</label>
        <%- contentTag('input', '', {type:'password', class:'form-control', name:'password'}) %>
        <%- fieldMessage(errors, 'password'); %>
      </div>

      <div class="form-group <%= fieldClass(errors, 'confirmPassword') %>">
        <label for="confirmPassword" class="control-label">* Confirm Password</label>
        <%- contentTag('input', '', {type:'password', class:'form-control', name:'confirmPassword'}) %>%>
      </div>

      <div class="form-group <%= fieldClass(errors, 'givenName') %>">
        <label for="givenName" class="control-label">* First Name</label>
        <%- contentTag('input', user.givenName, {type:'text', class:'form-control', name:'givenName'}) %>
        <%- fieldMessage(errors, 'givenName'); %>
      </div>

      <div class="form-group <%= fieldClass(errors, 'familyName') %>">
        <label for="familyName" class="control-label">* Last Name</label>
        <%- contentTag('input', user.familyName, {type:'text', class:'form-control', name:'familyName'}) %>
        <%- fieldMessage(errors, 'familyName'); %>
      </div>

      <div class="checkbox">
        <label for="emailNotifications" class="control-label">
          Do you want to receive email notifications?
          <% var checked = user.emailNotifications ? 'checked' : ''; %>
          <%- contentTag('input', '1', {type:'checkbox', checked: checked, name:'emailNotifications'}) %>
        </label>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="profile-photo-container well">
      <div id="profile-photo">
        <img src="<%= getAvatar(user); %>" alt="profile photo" />
      </div>
      <hr/>
      <span class="btn btn-success fileinput-button">
          <i class="glyphicon glyphicon-plus"></i>
          <span>Add profile photo</span>
          <input id="profile-fileupload" type="file" name="files[]" data-url="/files/upload">
      </span>

      <div id="profile-progress" class="csspinner traditional" style="display:none;"></div>
    </div>
    <div class="well">
      <label for="phone" class="control-label">Phone Number</label>
      <%- contentTag('input', user.phone, {type:'text', class:'form-control', name:'phone'}) %>
      <label for="address" class="control-label">Address</label>
      <%- contentTag('textarea', user.address, {class:'form-control', name:'address'}) %>
    </div>
  </div>
</div>
